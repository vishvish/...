set encoding=utf8
set ffs=unix,dos,mac

set nobackup
set noswapfile

set expandtab
set smarttab
set shiftwidth=2
set tabstop=2
set clipboard=unnamed
set showcmd
set laststatus=2

" Smart way to move between windows
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

" shortcut to execute ruby in current buffer
map <leader>r :!ruby %<cr>

" Enable mouse for all modes
set mouse=a

" Use mouse in iTerm2 for OS X
set ttymouse=xterm2

" turn on syntax highlighting
syntax on

" add Go lang highlighting
set rtp+=$GOROOT/misc/vim

" disable folding
set nofoldenable

" stop vim-json hiding quotes
let g:vim_json_syntax_conceal = 0

" Essential Bundle initialization hooks
let g:neocomplete#enable_at_startup = 1

au FileType javascript set dictionary+=$HOME/.vim/dict/vim-node.dict
